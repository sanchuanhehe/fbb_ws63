{
    "clangd.arguments": [
        "--compile-commands-dir=./output/bs21e/acore/standard-bs21e-1100e",
        "--background-index",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--log=verbose"
    ],
    "C_Cpp.errorSquiggles": "disabled",
    "clangd.fallbackFlags": [
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/drivers/include", 
        "-I${workspaceFolder}/middleware/include",
        "-march=rv32imc",
        "-mabi=ilp32",
        "-ffreestanding",
        "-fdata-sections",
        "-ffunction-sections",
        "-fno-common",
        "-nostdlib",
        "-pipe",
        "-Wno-unknown-warning-option",
        "-Wno-unused-command-line-argument"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.detectExtensionConflicts": false,
    "terminal.integrated.profiles.linux": {
        "bash_with_env": {
            "path": "bash",
            "args": ["-c", "source ${workspaceFolder}/activate_env.sh 2>/dev/null || source ${workspaceFolder}/config.sh; exec bash"],
            "icon": "terminal-bash"
        },
        "zsh_with_env": {
            "path": "zsh",
            "args": ["-c", "source ${workspaceFolder}/activate_env.sh 2>/dev/null || source ${workspaceFolder}/config.sh; exec zsh"],
            "icon": "terminal"
        },
        "zsh_clean": {
            "path": "zsh",
            "args": [],
            "icon": "terminal"
        }
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell_with_env": {
            "source": "PowerShell",
            "args": ["-NoExit", "-Command", "if (Test-Path '${workspaceFolder}\\activate_env.ps1') { & '${workspaceFolder}\\activate_env.ps1' } elseif (Test-Path '${workspaceFolder}\\config.ps1') { & '${workspaceFolder}\\config.ps1' }"],
            "icon": "terminal-powershell"
        },
        "cmd_with_env": {
            "path": "cmd.exe",
            "args": ["/k", "if exist \"${workspaceFolder}\\activate_env.bat\" (call \"${workspaceFolder}\\activate_env.bat\") else if exist \"${workspaceFolder}\\config.bat\" (call \"${workspaceFolder}\\config.bat\")"],
            "icon": "terminal-cmd"
        },
        "PowerShell_clean": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.linux": "zsh_with_env",
    "terminal.integrated.defaultProfile.windows": "PowerShell_with_env",
    "terminal.integrated.automationProfile.linux": {
        "path": "zsh"
    },
    "terminal.integrated.automationProfile.windows": null
}