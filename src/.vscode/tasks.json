{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja",
            "group": "build",
            "options": {
                "shell": {
                    "executable": "/usr/bin/zsh",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "reveal": "always"
            },
            "linux": {
                "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja",
                "options": {
                    "shell": {
                        "executable": "/usr/bin/zsh",
                        "args": ["-c"]
                    }
                }
            },
            "windows": {
                "command": "if (Test-Path '.\\activate_env.ps1') { & '.\\activate_env.ps1' } elseif (Test-Path '.\\config.ps1') { & '.\\config.ps1' }; python build.py -ninja",
                "options": {
                    "shell": {
                        "executable": "powershell.exe",
                        "args": ["-Command"]
                    }
                }
            }
        },
        {
            "label": "clean and build",
            "type": "shell", 
            "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja -c",
            "group": "build",
            "options": {
                "shell": {
                    "executable": "/usr/bin/zsh",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "reveal": "always"
            },
            "linux": {
                "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja -c",
                "options": {
                    "shell": {
                        "executable": "/usr/bin/zsh",
                        "args": ["-c"]
                    }
                }
            },
            "windows": {
                "command": "if (Test-Path '.\\activate_env.ps1') { & '.\\activate_env.ps1' } elseif (Test-Path '.\\config.ps1') { & '.\\config.ps1' }; python build.py -ninja -c",
                "options": {
                    "shell": {
                        "executable": "powershell.exe",
                        "args": ["-Command"]
                    }
                }
            }
        }
    ]
}