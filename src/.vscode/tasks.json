{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja",
            "group": "build",
            "options": {
                "shell": {
                    "executable": "/usr/bin/zsh",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "clean and build",
            "type": "shell", 
            "command": "source ${workspaceFolder}/activate_env.sh && ./build.py -ninja -c",
            "group": "build",
            "options": {
                "shell": {
                    "executable": "/usr/bin/zsh",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}